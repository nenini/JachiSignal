<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/post_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/baseline_arrow_back_24"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/image_cart_09"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:src="@drawable/community_3"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/post_top"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/post1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/catImg"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardCornerRadius="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/cat" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/post_userText"
                android:gravity="bottom"
                android:layout_toRightOf="@+id/catImg"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/nickname_recipe_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3C567B"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="고양이 사랑"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023.10.20 12:33"
                    android:textSize="13dp"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:padding="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/post_background"
            android:layout_marginTop="18dp">

            <LinearLayout
                android:id="@+id/post_tissueExtraText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_recipe_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:text="핸드폰 찾아주세요ㅠㅠ"
                    android:textColor="#3C567B"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_recipe_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:text="방금 동작역쪽에서 핸드폰 잃어버렸는데 혹시 보신 분 있으실까요ㅠㅠㅠ 사례금 드릴게요ㅠㅜㅜ"
                    android:textColor="#687F9F"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/downloaded_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp" />


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/heartcount" />

                        <TextView
                            android:id="@+id/heartCount_recipe_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="10개"
                            android:textColor="#3C567B" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/heart_recipe_post"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/heart" />

                        <ImageView
                            android:id="@+id/star_recipe_post"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/star_blank" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글"
                android:textStyle="bold"
                android:textSize="19dp"
                android:textColor="#3C567B"/>
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/post_background"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C567B"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:text="옥지얌"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C567B"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="헐.. 핸드폰 기종이 아이폰인가요?"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023.10.20 19:00"
                        android:textSize="13dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대댓글 달기"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/comment"/>

            </RelativeLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ㄴ "
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C567B"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="고양이 사랑"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C567B"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="아니요..ㅜㅠ 갤럭시요ㅠㅠ"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/text_background"
        android:drawableRight="@drawable/send"
        android:hint="댓글을 입력하세요."
        android:textSize="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="15dp" />

</RelativeLayout>