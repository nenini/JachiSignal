<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/fragment_community_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="90"
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/community_commu_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/community_1"
                    android:background="@drawable/blue"/>
                <ImageView
                    android:id="@+id/community_jachiItem_btn"
                    android:layout_marginStart="30dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/community_2"
                    android:background="@drawable/yellow"/>
                <ImageView
                    android:id="@+id/community_cook_btn"
                    android:layout_marginStart="30dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/community_3"
                    android:background="@drawable/pink"/>
            </LinearLayout>

            <ScrollView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/community_commu_pageBTN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:src="@drawable/community_1"
                            android:layout_gravity="center"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/community_recyclerView1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/community_jachiItem_pageBTN"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/yellow"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:src="@drawable/community_2"
                            android:layout_gravity="center"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/community_recyclerView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/community_cook_pageBTN"
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pink"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:src="@drawable/community_3"
                            android:layout_gravity="center"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/community_recyclerView3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>


