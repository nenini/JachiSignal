<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_arrow_back_24"/>
    <TextView
        android:id="@+id/text_Jachi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="자취시그널"
        android:gravity="center"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#3c567b"/>
    <LinearLayout
        android:layout_alignBaseline="@id/text_Jachi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#3c567b"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#3c567b"/>
        <EditText
            android:id="@+id/email_edit_txt"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/id_password_edit"
            android:hint="이메일 입력"
            android:textColorHint="#6983A9"/>
        <TextView
            android:id="@+id/password_edit_txt"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호 입력"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#3c567b"/>
        <EditText
            android:id="@+id/password_check_edit_txt"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/id_password_edit"
            android:hint="비밀번호 입력(숫자,영문 조합 최소 6자)"
            android:textColorHint="#6983A9"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#3c567b"/>
        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/id_password_edit"
            android:hint="닉네임"
            android:textColorHint="#6983A9"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#3c567b"/>
        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/id_password_edit"
            android:hint="이름 입력"
            android:textColorHint="#6983A9"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#3c567b"/>
        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/id_password_edit"
            android:hint="전화번호 입력"
            android:textColorHint="#6983A9"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="회원가입 완료"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/id_pass_btn"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>