<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/post_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/baseline_arrow_back_24"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/image_cart_09"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:src="@drawable/_9"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/post_top"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
        <RelativeLayout
            android:id="@+id/post1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/catImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/cat" />
            <LinearLayout
                android:id="@+id/post_userText"
                android:gravity="bottom"
                android:layout_toRightOf="@+id/catImg"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3C567B"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="고양이 사랑"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023.10.24 17:52"
                    android:textSize="13dp"/>
            </LinearLayout>
            <Button
                android:layout_alignBottom="@id/post_userText"
                android:background="@drawable/button_round"
                android:backgroundTint="#DFE9EB"
                android:layout_toRightOf="@id/post_userText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="2/5" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/post_background"
            android:layout_marginTop="18dp">
            <ImageView
                android:paddingLeft="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tissue"/>
            <LinearLayout
                android:id="@+id/post_tissueText"
                android:gravity="center_vertical"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3C567B"
                    android:textStyle="bold"
                    android:text="제품명 : 깨끗한나라 물티슈 70매 x 10개"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3C567B"
                    android:textStyle="bold"
                    android:text="가격 : 19,900원(인당 1,990원)"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/post_background"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/post_tissueExtraText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:text="집이 너무 더러워요"
                    android:textColor="#3C567B"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:text="집이 너무 지저분해서 물티슈가 필요한데 인간적으로 10개는 너무 많은 것 같아서 공구합니다....ㅠ"
                    android:textColor="#687F9F"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/heartcount" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="19개"
                            android:textColor="#3C567B" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity=""
                        android:layout_marginLeft="220dp"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/heart" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/star" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_marginLeft="283dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="참여하기"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/yellowbtn_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#3C567B"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/post_background"
                android:layout_marginTop="18dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3C567B"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="강아지 사랑"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3C567B"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:text="바로 사야겠네요!!!"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023.10.25 13:12"
                    android:textSize="13dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="12dp"
                android:paddingLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ㄴ "
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C567B"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="옥지얌"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C567B"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="저도 참여해야겠네요 ㅎㅎ!"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/text_background"
        android:hint="댓글을 입력하세요."
        android:paddingLeft="30dp"
        />

</RelativeLayout>