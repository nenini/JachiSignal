<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/post_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/baseline_arrow_back_24"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/image_cart_09"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:src="@drawable/_9"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/post_top"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/post1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/catImg"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardCornerRadius="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/user_img_09_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/cat" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/post_userText"
                android:gravity="bottom"
                android:layout_toRightOf="@+id/catImg"
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/nickname_09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3C567B"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:text="고양이 사랑"/>
                <TextView
                    android:id="@+id/timestamp_09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023.10.24 17:52"
                    android:textSize="13dp"/>
            </LinearLayout>
            <Button
                android:layout_alignBottom="@id/post_userText"
                android:background="@drawable/button_round"
                android:backgroundTint="#DFE9EB"
                android:layout_toRightOf="@id/post_userText"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:drawableLeft="@drawable/people"
                android:text="2/5" />
        </RelativeLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/post_background"
            android:layout_marginTop="18dp">

            <LinearLayout
                android:id="@+id/post_tissueText"
                android:gravity="center_vertical"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/itemName_09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3C567B"
                    android:textStyle="bold"
                    android:text="제품명 : 깨끗한나라 물티슈 70매 x 10개"/>
                <TextView
                    android:id="@+id/price_09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3C567B"
                    android:textStyle="bold"
                    android:text="가격 : 19,900원(인당 1,990원)"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/post_background"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/post_tissueExtraText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:text="집이 너무 더러워요"
                    android:textColor="#3C567B"
                    android:textSize="23dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_09"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="13dp"
                    android:text="집이 너무 지저분해서 물티슈가 필요한데 인간적으로 10개는 너무 많은 것 같아서 공구합니다....ㅠ"
                    android:textColor="#687F9F"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/downloaded_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/heartcount" />


                        <TextView
                            android:id="@+id/heartCount_09"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="19개"
                            android:textColor="#3C567B" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/heart_09_post"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/heart" />

                        <ImageView
                            android:id="@+id/star_09_post"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/star_blank" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/join_09_post"
            android:layout_gravity="right"
            android:layout_marginTop="13dp"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="참여하기"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/yellowbtn_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="댓글"
                android:textStyle="bold"
                android:textSize="19dp"
                android:textColor="#3C567B"/>
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/post_background"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C567B"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:text="강아지 사랑"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C567B"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="바로 사야겠네요!!!"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023.10.25 13:12"
                        android:textSize="13dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대댓글 달기"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@id/comment"/>

            </RelativeLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ㄴ "
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C567B"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="옥지얌"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3C567B"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="저도 참여해야겠네요 ㅎㅎ!"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/text_background"
        android:drawableRight="@drawable/send"
        android:hint="댓글을 입력하세요."
        android:textSize="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="15dp" />

</RelativeLayout>